{
  "name": "worksight",
  "version": "1.0.0",
  "main": "electron/dist/main.mjs",
  "scripts": {
    "dev:ui": "cd ui && npm run dev",
    "build:electron": "tsc -p electron",
    "dev:electron": "cd ui && npm run build && cd .. && npm run build:electron && electron electron/dist/main.mjs",
    "build": "npm run build:electron && electron-builder"
  },
  "dependencies": {
    "better-sqlite3": "^12.5.0"
  },
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "typescript": "^5.9.3"
  },
  "build": {
    "appId": "com.worksight.app",
    "productName": "WorkSight",
    "asar": true,
    "asarUnpack": [
      "**/node_modules/better-sqlite3/**"
    ],
    "files": [
      "electron/dist/**/*",
      "dist/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "electron/resources/worksight-tracker.exe",
        "to": "worksight-tracker.exe"
      }
    ],
    "win": {
      "target": "nsis"
    }
  }
}
